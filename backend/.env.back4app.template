# Parse/Back4App Credentials
PARSE_APP_ID=your-parse-app-id
PARSE_REST_API_KEY=your-parse-rest-api-key
PARSE_SERVER_URL=https://parseapi.back4app.com

# Back4App SDK/API (optional, for direct SDK usage)
B4A_APP_ID=your-app-id
B4A_JAVASCRIPT_KEY=your-javascript-key
B4A_SERVER_URL=https://parseapi.back4app.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Regional Configuration
DEFAULT_REGIONAL_FACTOR=1.05
PRICE_HISTORY_DAYS=30

# (Optional) Firebase Integration - Only if you use Firebase features in production
# FIREBASE_PROJECT_ID=your-firebase-project-id
# GOOGLE_APPLICATION_CREDENTIALS=serviceAccountKey.json
