# -----------------------------
# Rooster Poultry Management
# Back4App Deployment .env Template
# -----------------------------

# Parse/Back4App Credentials
PARSE_APP_ID=YOUR_BACK4APP_APP_ID
PARSE_REST_API_KEY=YOUR_BACK4APP_REST_API_KEY
PARSE_SERVER_URL=https://parseapi.back4app.com
PARSE_MASTER_KEY=YOUR_BACK4APP_MASTER_KEY
PARSE_CLIENT_KEY=YOUR_BACK4APP_CLIENT_KEY

# Back4App SDK/API (optional, for direct SDK usage)
B4A_APP_ID=YOUR_BACK4APP_APP_ID
B4A_JAVASCRIPT_KEY=YOUR_BACK4APP_JAVASCRIPT_KEY
B4A_SERVER_URL=https://parseapi.back4app.com

# Server Configuration
NODE_ENV=production
PORT=1337

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=200

# Regional Configuration
DEFAULT_REGIONAL_FACTOR=1.05
PRICE_HISTORY_DAYS=45

# Firebase Configuration (Authentication)
FIREBASE_PROJECT_ID=rooster-poultry-management
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
FIREBASE_AUTH_DOMAIN=rooster-poultry-management.firebaseapp.com
FIREBASE_DATABASE_URL=https://rooster-poultry-management-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=rooster-poultry-management.appspot.com

# Security (Production)
CORS_ORIGIN=https://your-production-domain.com
LOG_LEVEL=warn
LOG_FORMAT=combined

# Back4App Specific
BACK4APP_SERVER_URL=https://parseapi.back4app.com
BACK4APP_APP_NAME=rooster-poultry-api
